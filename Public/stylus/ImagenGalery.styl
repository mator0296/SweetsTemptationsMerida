.imageGalery
  width: 100%
  height:250px
  border 2px solid Logo
  .row .col
    padding:0    
  .imageBox
    position:relative
    overflow:hidden
    img
      width:100%
      height:246px
    .textBox
      position:absolute
      bottom:0
      left:0
      width:100%
      height:100%
      text-align:center
      .row
        padding-top 7em
        position absolute
        z-index 50
        top 0
        left 0
        margin 0
        width 100%
        .col
          padding-bottom 1.3em
      &:before
        content:" "
        position:absolute;
        top:-5px
        left:0
        width:100%
        height:100% 
        background:rgba(Logo,0.8);
        opacity:0
        transition: opacity 0.35s
        z-index 5
      
      &:hover
        span
          transform:translatey(-90%)
          color:white
          text-shadow: 0px 0px 3px Logo
        p
          transform:translatey(-50%)
          opacity:1
        a
          opacity 1  
        &:before
          opacity:1  
      
      p
        position:absolute
        bottom:0
        left:0
        width:100%
        font-family:'Berkshire Swash', cursive
        font-size:1.3em
        color:Logo
        transform:tanslatey(25%)
        opacity:0
        transition: opacity 0.2s, transition 0.35s, transform 0.35s 
      a
        //position absolute
        opacity 0
        color Logo
        background-color white
        width 50%
        font-size 11px
      .btn
        padding 0 0.3rem
        i.left
          margin-right 0
