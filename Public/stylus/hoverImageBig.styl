Logo = #351327

.HomeGalery 
  .row .col
    padding:0
    height 100%
  .textBox
    position:absolute
    bottom:0
    left:0
    width:100%
    height:100%
    text-align:center
    &:before
      content:" "
      position:absolute;
      top:0
      left:0
      width:100%
      height:100% 
      background:linear-gradient(to bottom, rgba(Logo,0), rgba(Logo,0.8) 70%)
      opacity:0
      transition: opacity 0.35s
    
    &:hover
      h1
        transform:translatey(-90%)
        color:white
        text-shadow: 0px 0px 3px Logo
      p
        transform:translatey(-50%)
        opacity:1
      a
        opacity 1  
      &:before
        opacity:1  
    h1
      position:absolute;
      top:50%
      left:0
      width:100%
      color:Logo
      font-family:'Berkshire Swash', cursive
      text-shadow:0px 0px 3px white
      transform:tanslatey(25%)
      transition: color 0.35s, transition 0.35s, text-shadow 0.35s, transform 0.35s
    p
      position:absolute
      bottom:0
      left:0
      width:100%
      font-family:'Berkshire Swash', cursive
      font-size:1.3em
      color:Logo
      transform:tanslatey(25%)
      opacity:0
      transition: opacity 0.2s, transition 0.35s, transform 0.35s
      
.fotoContainer
  width: 100%
  height:100% 
  .imageBox
    position:relative
    overflow:hidden
    img
      width:100%
      height:950px
    
@media screen and (max-width: 1200px)
  .fotoContainer
    .imageBox
      img
        height 900px
    
@media screen and (max-width: 800px)
  .fotoContainer
    .imageBox
      img
        height 600px
        
@media screen and (max-width: 480px)
  .fotoContainer
    .imageBox
      img
        height 360px        
