										if(pedido.cases == "two" && pedido.type == "cakes")
											a.carousel-item(href="#" + i)
												img(src=pedido.refere.replace("Public", "/stactic"))
								.carousel(id="onecupcakes" style = "")
									for pedido, i in prePedidos
