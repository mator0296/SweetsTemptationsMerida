										a.carousel-item(href="#" + i)
											img(src=pedido.refere.replace("Public", "/stactic"))					
						else if(type == "cupcakes")
							.carousel(id="onecupcakes" style = "")
								for pedido, i in prePedidos
									if(pedido.cases == "one" && pedido.type == "cupcakes")
										a.carousel-item(href="#" + i)
											img(src=pedido.refere.replace("Public", "/stactic"))
							.carousel(id="twocupcakes" style = "")
								for pedido, i in prePedidos
									if(pedido.cases == "two" && pedido.type == "cupcakes")
										a.carousel-item(href="#" + i)
											img(src=pedido.refere.replace("Public", "/stactic"))
						else
								.carousel(id="3-three" style = "")
